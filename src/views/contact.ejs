<%- include('partials/header') %>

    <main class="container">
        <h2 class="contact__title">Contacto</h2>
        <form class="contact__form" id="contactForm" action="" method="POST">
            <!-- Nombre -->
            <div class="contact__item col-6">
                <label class="form-label contact__subtitle" for="name">Nombre</label>
                <input class="form-control form-control-lg" id="name" type="text" placeholder="Ingresar nombre"
                    data-sb-validations="required" />
                <div class="invalid-feedback" data-sb-feedback="name:required">Este campo es obligatorio.</div>
            </div>

            <!-- Email  -->
            <div class="contact__item col-6">
                <label class="form-label contact__subtitle" for="emailAdd">Email</label>
                <input class="form-control form-control-lg" id="emailAdd" type="email" placeholder="Ingresar Email"
                    data-sb-validations="required, email" />
                <div class="invalid-feedback" data-sb-feedback="emailAddress:required">Este campo es obligatorio.</div>
                <div class="invalid-feedback" data-sb-feedback="emailAddress:email">La direccion de Email no es valida.
                </div>
            </div>

            <!-- Mensaje -->
            <div class="contact__item col-6">
                <label class="form-label contact__subtitle" for="message">Mensaje</label>
                <textarea class="form-control form-control-lg" id="message" type="text" placeholder="Ingresar mensaje"
                    style="height: 10rem;" data-sb-validations="required"></textarea>
                <div class="invalid-feedback" data-sb-feedback="message:required">Este campo es obligatorio.</div>
            </div>


            <!-- Enviar -->
            <div class="col-2 d-grid">
                <button class="contact__button" type="submit">Enviar</button>
            </div>
            <input type="hidden" name="_next" value="http://127.0.0.1:5500/">
            <input type="hidden" name="_captcha" value="false">
            <input type="hidden" name="_subject" value="Consulta desde BookShop">
            <input type="hidden" name="_template" value="table">
        </form>
    </main>



    <%- include('partials/footer') %>