<%- include('../partials/head') %>

<body>
    <%- include('../partials/headerAdmin') %>

    <main id="create" class="container">
        <h2 class="create__title">CREAR NUEVO ITEM</h2>
        <form class="create__form" action="/admin/create" method="POST" enctype="multipart/form-data">
            <div class="form__flex">
                <div class="form__box--flex">
                    <label class="form__label" for="category">Categoria:</label>
                    <select class="form__select" name="category" id="collection">
                        <option value="" disabled selected hidden>Seleccionar</option>
                        <option value="1">Figuras</option>
                        <option value="2">Remeras</option>
                        <option value="3">Llaveros</option>
                    </select>
                </div>
                <div class="form__box--flex">
                    <label class="form__label" for="licence">Licencia:</label>    
                    <select class="form__select" name="licence" id="licence" >
                        <option value="" disabled selected hidden>Seleccionar</option>
                        <option value="1">Pokemon</option>
                        <option value="2">Star Wars</option>
                        <option value="3">Harry Potter</option>
                        <option value="4">Deportes</option>
                    </select>
                </div>
            </div>
            <div class="form__box--flex">
                <label class="form__label" for="">Nombre del producto:</label>
                <input class="form__input" type="text" name="name" id="name" placeholder="Kakashi Hatake Shippuden Saga">
            </div>
            <div>
                <textarea name="description" id="description" cols="30" rows="10" placeholder="Descripción del producto"></textarea>
            </div>
            <div class="form__flex">
                <div class="form__box--flex">
                    <label class="form__title" for="sku">SKU:</label>
                    <input class="form__input" type="text" name="sku" id="sku" placeholder="codigo SKU">
                </div>
                <div class="form__box--flex">    
                    <label class="form__title" for="price">Precio: <span>$</span></label>
                    <input class="form__input" type="text" name="price" id="price" placeholder="Precio del Producto">
                </div>
                <div class="form__box--flex">
                    <label class="form__title" for="stock">Stock:</label>
                    <input class="form__input" type="number" name="stock" id="stock">
                </div>
            </div>
            <div class="form__container">
                <label class="form__title" for="discount">Descuento:</label>
                <input class="form__input" type="text" name="discount" id="discount" placeholder="0%">
                <label class="create__form__sub-title" for="dues">Cuotas:</label>
                <select class="create__form__select" name="dues" id="dues" aria-placeholder="Cuotas">
                    <option value="" selected>Seleccionar</option>
                    <option value="1 cuota">1 Cuota</option>
                    <option value="3 cuotas">3 Cuotas sin interés</option>
                    <option value="6 cuotas">6 Cuotas sin interés</option>
                    <option value="12 cuotas">12 Cuotas sin interés</option>
                </select>
            </div>
            <div class="form__box--flex">
                <label class="form__label" for="images">Imágenes:</label>
                <input name="images" type="file" id="img" multiple>
            </div>
            <div class="form__button-container">
                <button class="form__button" type="submit"> Agregar Producto </button>
                <button class="form__button" type="reset">Limpiar</button>
            </div>
        </form>
    </main>
    
    <!--Inicio Footer-->
    <%- include('../partials/footer') %>
</body>
</html>