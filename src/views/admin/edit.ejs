<%- include('../partials/head') %>

<body>

<%- include('../partials/headerAdmin') %>

    <main id="edit" class="container">
        <h2 class="edit__title">EDITAR ITEM</h2>
        <form class="edit__form" action="/admin/edit" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form__flex">
                <div class="form__box--flex">
                <label class="form__label" for="collection" >Categoria:</label>
                    <select class="form__select" name="collection" id="collection" required>
                        <% if(product.category_id == 1) { %>
                            <option value="1" selected>Figuras coleccionables</option>
                            <option value="2">Llaveros</option>
                            <option value="3">Remeras</option>
                        <% } %>
                        <% if(product.category_id==2) { %>
                            <option value="1">Figuras coleccionables</option>
                            <option value="2" selected>Llaveros</option>
                            <option value="3">Remeras</option>
                            <% } %>
                        <% if(product.category_id==3) { %>
                            <option value="1">Figuras coleccionables</option>
                            <option value="2">Llaveros</option>
                            <option value="3" selected>Remeras</option>
                            <% } %>
                    </select>
                </div>
                <div class="form__box--flex">
                <label class="form__label" for="collection">Licencia:</label>
                <select class="form__select" name="collection" id="collection" required>
                    <% if(product.licence_id==1) { %>
                        <option value="1" selected>Pokemon</option>
                        <option value="2">Star Wars</option>
                        <option value="3">Harry Potter</option>
                        <option value="4">Deportistas</option>
                    <% } %>
                    <% if(product.licence_id==2) { %>
                        <option value="1">Pokemon</option>
                        <option value="2" selected>Star Wars</option>
                        <option value="3">Harry Potter</option>
                        <option value="4">Deportistas</option>
                    <% } %>
                    <% if(product.licence_id==3) { %>
                        <option value="1">Pokemon</option>
                        <option value="2">Star Wars</option>
                        <option value="3" selected>Harry Potter</option>
                        <option value="4">Deportistas</option>
                    <% } %>
                    <% if(product.licence_id==4) { %>
                        <option value="1">Pokemon</option>
                        <option value="2">Star Wars</option>
                        <option value="3">Harry Potter</option>
                        <option value="4" selected>Deportistas</option>
                    <% } %>
                </select>
                </div>
            </div>
            <div class="form__box--flex">
                <label class="form__label" for="">Nombre del producto:</label>
                <input class="form__input" type="text" name="name" id="name" value="<%= product.product_name %>" required>
            </div>
            <div>
                <textarea name="description" id="description" cols="30" rows="10" required><%= product.product_description %></textarea>
            </div>
            <div class="form__flex">
                <div class="form__box--flex">
                    <label class="form__title" for="sku">SKU:</label>
                    <input class="form__input" type="text" name="sku" id="sku" value="<%= product.sku %>" required>
                </div>
                <div class="form__box--flex">
                    <label class="form__title" for="price">Precio:</label>
                    <div class="form__input--wrapper"><span>$</span><input class="form__input" type="text" name="price" id="price" data-type="currency" value="<%= product.price %>" required></div>
                </div>
                <div class="form__box--flex">
                    <label class="form__title" for="stock">Stock:</label>
                    <div class="form__input--wrapper">
                    <input class="form__input" type="text" name="stock" id="stock" value="<%= product.stock %>" required><span>unidades</span></div>
                </div>
            </div>
            <div class="form__container">
                <label class="form__title" for="">Descuento:</label>
                <input class="form__input" type="text" name="discount" id="discount" value="<%= product.discount %>" >
                <label class="form__title" for="dues">Cuotas:</label>
                <select class="form__select" name="dues" id="dues">
                    <% if(product.dues==1) { %>
                        <option value="1" selected>1 cuota</option>
                        <option value="3">3 cuotas sin interes</option>
                        <option value="6">6 cuotas sin interes</option>
                        <option value="12">12 cuotas sin interes</option>
                    <% } %>
                    <% if(product.dues==3) { %>
                        <option value="1">1 cuota</option>
                        <option value="3" selected>3 cuotas sin interes</option>
                        <option value="6">6 cuotas sin interes</option>
                        <option value="12">12 cuotas sin interes</option>
                    <% } %>
                    <% if(product.dues==6) { %>
                        <option value="1">1 cuota</option>
                        <option value="3">3 cuotas sin interes</option>
                        <option value="6" selected>6 cuotas sin interes</option>
                        <option value="12">12 cuotas sin interes</option>
                        <% } %>
                    <% if(product.dues==12) { %>
                        <option value="1">1 cuota</option>
                        <option value="3">3 cuotas sin interes</option>
                        <option value="6">6 cuotas sin interes</option>
                        <option value="12" selected>12 cuotas sin interes</option>
                    <% } %>
                </select>
            </div>
            <div class="form__container">
                <label class="form__title" for="">Im√°genes:</label>
                <input class="form__select-img" name="Elegir archivos" type="file">
            </div>
            <div class="form__container-img">
                <div>
                    <img class="edit__img" src="<%= product.img_front %>" alt="">
                    <p class="form__text">Frente</p>
                </div>
                <div>
                    <img class="edit__img" src="<%= product.img_back %>" alt="">
                    <p class="form__text">Dorso</p>
                </div>
            </div>
            <div class="form__button-container">
                <button class="form__button" type="submit"> Modificar Producto </button>
                <button class="form__button" type="submit"> Limpiar </button>
            </div>
        </form>
    </main>
    
    
    <!--Inicio Footer-->
<%- include('../partials/footer') %>
    
</body>
</html>