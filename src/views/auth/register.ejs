<%- include('../partials/head') %>


<body>
<%- include('../partials/headerAdmin') %>

    <main class="register container">
        <h2 class="register__title">CREA TU CUENTA</h2>
        <form class="register__form" action="">
            <h3 class="register__message">Completa el formulario para ser parte del mundo de los Funkos</h3>
            <div>
                <div class="form__box--grid">
                    <label class="form__label" for="text">Nombre:</label>
                    <input class="form__input" type="text" name="" id="" placeholder="Ingresa tu Nombre">
                </div>
                <div class="form__box--grid">
                    <label class="form__label" for="text">Apellido:</label>
                    <input class="form__input" type="text" name="" id="" placeholder="Ingresa tu Apellido">
                </div>
                <div class="form__box--grid">
                    <label class="form__label" for="email">Email:</label>
                    <input class="form__input" type="email" name="" id="" placeholder="tumail@mail.com">
                </div>
                <div class="form__box--grid">
                    <label class="form__label" for="password">Contraseña:</label>
                    <input class="form__input" type="password" placeholder="password">
                </div>
                <div class="form__box--grid">
                    <label class="form__label" for="password">Repita Contraseña:</label>
                    <input class="form__input" type="password" placeholder="password">
                </div>
            </div>
            <div>
                <div class="form__submission">
                    <a class="register__shop" href="/shop">Ingresar</a>
                    <input type="checkbox" name="" id="">
                    <label class="login__remember" for="">Acepto </label>
                    <a class="login__recovery" href="">Términos y Condiciones</a>
                </div>
            </div>
        </form>
    </main>

    <!--Inicio Footer-->
    <%- include('../partials/footer') %>
    
</body>
</html>